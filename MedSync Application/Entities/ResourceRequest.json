{
  "name": "ResourceRequest",
  "type": "object",
  "properties": {
    "requesting_hospital_id": {
      "type": "string",
      "description": "Hospital requesting the resource"
    },
    "requesting_hospital_name": {
      "type": "string",
      "description": "Requesting hospital name"
    },
    "providing_hospital_id": {
      "type": "string",
      "description": "Hospital providing the resource"
    },
    "providing_hospital_name": {
      "type": "string",
      "description": "Providing hospital name"
    },
    "resource_id": {
      "type": "string",
      "description": "Resource ID being requested"
    },
    "resource_name": {
      "type": "string",
      "description": "Resource name"
    },
    "resource_type": {
      "type": "string",
      "description": "Type of resource"
    },
    "quantity_requested": {
      "type": "number",
      "description": "Quantity requested"
    },
    "quantity_approved": {
      "type": "number",
      "description": "Quantity approved (can be less than requested)"
    },
    "urgency": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ],
      "default": "medium",
      "description": "Request urgency"
    },
    "reason": {
      "type": "string",
      "description": "Reason for request"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "fulfilled",
        "cancelled"
      ],
      "default": "pending",
      "description": "Request status"
    },
    "requested_date": {
      "type": "string",
      "format": "date",
      "description": "Date of request"
    },
    "required_by_date": {
      "type": "string",
      "format": "date",
      "description": "Date by when resource is needed"
    },
    "response_notes": {
      "type": "string",
      "description": "Response from providing hospital"
    },
    "contact_person": {
      "type": "string",
      "description": "Contact person at requesting hospital"
    },
    "contact_phone": {
      "type": "string",
      "description": "Contact phone number"
    }
  },
  "required": [
    "requesting_hospital_id",
    "providing_hospital_id",
    "resource_name",
    "quantity_requested",
    "urgency"
  ]
}