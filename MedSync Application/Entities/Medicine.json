{
  "name": "Medicine",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Medicine name"
    },
    "generic_name": {
      "type": "string",
      "description": "Generic/scientific name"
    },
    "manufacturer": {
      "type": "string",
      "description": "Manufacturer name"
    },
    "category": {
      "type": "string",
      "enum": [
        "antibiotic",
        "painkiller",
        "antipyretic",
        "antihistamine",
        "antacid",
        "vitamin",
        "cardiac",
        "diabetic",
        "respiratory",
        "dermatology",
        "other"
      ],
      "description": "Medicine category"
    },
    "form": {
      "type": "string",
      "enum": [
        "tablet",
        "capsule",
        "syrup",
        "injection",
        "cream",
        "drops",
        "inhaler",
        "powder",
        "other"
      ],
      "description": "Medicine form"
    },
    "strength": {
      "type": "string",
      "description": "Strength/dosage (e.g., 500mg, 10ml)"
    },
    "hospital_id": {
      "type": "string",
      "description": "Hospital ID (pharmacy location)"
    },
    "hospital_name": {
      "type": "string",
      "description": "Hospital name"
    },
    "stock_quantity": {
      "type": "number",
      "description": "Current stock quantity"
    },
    "minimum_stock": {
      "type": "number",
      "description": "Minimum stock level for alerts",
      "default": 10
    },
    "unit_price": {
      "type": "number",
      "description": "Price per unit"
    },
    "batch_number": {
      "type": "string",
      "description": "Batch/lot number"
    },
    "expiry_date": {
      "type": "string",
      "format": "date",
      "description": "Expiry date"
    },
    "supplier": {
      "type": "string",
      "description": "Supplier name"
    },
    "storage_instructions": {
      "type": "string",
      "description": "Storage instructions"
    },
    "prescription_required": {
      "type": "boolean",
      "description": "Whether prescription is required",
      "default": true
    },
    "status": {
      "type": "string",
      "enum": [
        "available",
        "low_stock",
        "out_of_stock",
        "expired",
        "discontinued"
      ],
      "default": "available",
      "description": "Medicine status"
    },
    "notes": {
      "type": "string",
      "description": "Additional notes"
    }
  },
  "required": [
    "name",
    "category",
    "form",
    "hospital_id",
    "stock_quantity"
  ]
}