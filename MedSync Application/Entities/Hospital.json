{
  "name": "Hospital",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Hospital name"
    },
    "location": {
      "type": "string",
      "description": "Full address"
    },
    "city": {
      "type": "string",
      "description": "City"
    },
    "contact_phone": {
      "type": "string",
      "description": "Contact phone number"
    },
    "contact_email": {
      "type": "string",
      "description": "Contact email"
    },
    "specialties": {
      "type": "array",
      "description": "Medical specialties available",
      "items": {
        "type": "string"
      }
    },
    "total_beds": {
      "type": "number",
      "description": "Total bed capacity"
    },
    "available_beds": {
      "type": "number",
      "description": "Currently available beds"
    },
    "icu_beds_total": {
      "type": "number",
      "description": "Total ICU beds"
    },
    "icu_beds_available": {
      "type": "number",
      "description": "Available ICU beds"
    },
    "emergency_available": {
      "type": "boolean",
      "description": "Emergency services available",
      "default": true
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "maintenance"
      ],
      "default": "active",
      "description": "Hospital operational status"
    },
    "rating": {
      "type": "number",
      "description": "Hospital rating (1-5)"
    }
  },
  "required": [
    "name",
    "location",
    "city",
    "total_beds",
    "available_beds"
  ]
}